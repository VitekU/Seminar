<Page x:Class="loginApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:loginApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Login Form" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Username" VerticalAlignment="Center" Width="80" />
                <TextBox Name="UsernameTextBox" Width="200" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Password" VerticalAlignment="Center" Width="80" />
                <PasswordBox Name="PasswordBox" Width="200" />
            </StackPanel>
            <Button Content="Login" HorizontalAlignment="Center" Width="100" Margin="0,20" Click="LoginButton_Click"/>
            <TextBlock Name="OutText" Text=""/>
        </StackPanel>

    </Grid>
</Page>
