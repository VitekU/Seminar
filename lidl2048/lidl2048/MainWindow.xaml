<Window x:Class="lidl2048.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lidl2048"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0"
            Width="150" Height="150"
            CornerRadius="15"
            Background="#EDC22E"
            HorizontalAlignment="Left"
            Margin="40 0 0 0">

            <TextBlock Text="{Binding NameOfGame}"
               Foreground="White"
               FontSize="48"
               FontWeight="Bold"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"/>
        </Border>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Vertical" Margin="0 0 40 0">
           
            <Border Width="200" Height="70"
            CornerRadius="10"
            Background="#BBADA0"
            Padding="5">

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="SCORE"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>

                    <TextBlock Text="{Binding Score}"
                       Name="ScoreText"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </StackPanel>
            </Border>

            
            <Button Margin="0 10 0 0" Width="200" Height="70"
            Background="#BBADA0"
                Foreground="White"
            FontSize="18"
            FontWeight="Bold"
            Content="RESTART"
            BorderThickness="0"
            Padding="5"
            Cursor="Hand"
            Click="ButtonRestart_Click"
            >
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="10"
                        Padding="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>


        <Border SnapsToDevicePixels="True" BorderBrush="#636363" BorderThickness="10" Width="400" Height="400" Grid.Row="1" CornerRadius="10" Background="#636363">
            <Grid Name="GameGrid" Background="#636363">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Border>
        
    </Grid>
</Window>
